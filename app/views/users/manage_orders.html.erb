<h2>List of Orders</h2>
<section>
  <h3> Order Details</h3>
  <h4> Total Revenue: $ <%= '%.2f' % @current_user.total_revenue%></h4>
  <table class="table">
    <thead>
    <tr>
      <th>Order Number</th>
      <th>Product Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>Status</th>
      <th>Order Time</th>
    </tr>
    </thead>

    <tbody>
    <% @current_user.order_items.each do |item| %>
      <tr>
        <td><%= link_to item.order.id, order_path(item.order.id)  %></td>
        <td><%= link_to item.product.name, product_path(item.product.id)  %></td>
        <td>$<%= '%.2f' % item.product.price %></td>
        <td><%= item.quantity%></td>
        <td>$<%='%.2f' % item.subtotal %></td>
        <td><%= item.order.status.capitalize%></td>
        <td><%= item.order.created_at.strftime("%A, %b %d")%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
</section>

