<section>
  <%= form_with model: @product, class: 'edit-product' do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :in_stock %>
      <%= f.text_field :in_stock, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :photo %>
      <%= f.text_field :photo, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</section>
