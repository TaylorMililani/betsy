
<% if @product.errors.any? %>
  <ul class="errors">
    <% @product.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section>
  <%= form_with model: @product, class: 'edit-product' do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category_ids, "Categories" %>
      <%= f.collection_select :category_ids, @categories, :id, :name, {}, :multiple => 'true', :class => 'multiselect' %>

    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :in_stock %>
      <%= f.text_field :in_stock, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo %>


      <%#= form_with scope: :post, url: product_path(@product.id), method: :patch do |form| %>
        <%#= f.url_field(:product, :photo) %>
      <%# end %>
    </div>


    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</section>
